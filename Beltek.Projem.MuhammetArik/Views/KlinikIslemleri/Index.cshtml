@model IEnumerable<Beltek.Projem.MuhammetArik.Models.Klinik>

@{
    ViewData["Title"] = "Klinik İşlemleri";
}

<h1>Klinik İşlemleri</h1>

<p>
    <a class="bi bi-arrow-right-circle buttonStyle" asp-action="Create">Klinik Ekle</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Adi)
                </td>
                <td>
                    <a class="bi bi-pencil-square d-inline p-2 bg-success text-white" asp-action="Edit" asp-route-id="@item.KlinikId">Düzenle</a> |
                    <a class="bi bi-info-circle d-inline p-2 bg-info text-white" asp-action="Details" asp-route-id="@item.KlinikId">Detaylar</a> |
                    <a class="bi bi-trash d-inline p-2 bg-danger text-white" asp-action="Delete" asp-route-id="@item.KlinikId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>