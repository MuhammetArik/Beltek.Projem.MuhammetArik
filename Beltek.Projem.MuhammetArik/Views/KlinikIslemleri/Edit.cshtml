@model Beltek.Projem.MuhammetArik.Models.Klinik

@{
    ViewData["Title"] = "Klinik Bilgileri Güncelleme";
}

<h1>Klinik Bilgileri Güncelleme</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KlinikId" />
            <div class="form-group">
                <label asp-for="Adi" class="control-label">Klinik Adı</label>
                <input asp-for="Adi" class="form-control" />
                <span asp-validation-for="Adi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" /> |
                <a class="buttonStyle" asp-action="Index">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}