@model Beltek.Projem.MuhammetArik.Models.RandevuAl

@{
    ViewData["Title"] = "Randevu Güncelleme";
}

<h1>Randevu Güncelleme</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RandevuId" />
            <input type="hidden" asp-for="HastaId" />
            <input type="hidden" asp-for="KlinikId" />
            <input type="hidden" asp-for="DoktorId" />
            <div class="form-group">
                <label asp-for="RandevuZamani" class="control-label"></label>
                <input asp-for="RandevuZamani" class="form-control" />
                <span asp-validation-for="RandevuZamani" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="buttonStyle" /> |<a class="buttonStyle" asp-action="Index">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}